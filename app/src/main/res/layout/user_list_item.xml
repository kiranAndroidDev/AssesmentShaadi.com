<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="result"
                type="com.example.demoshaadi.api.model.Results"/>


        <variable
                name="description"
                type="String"/>

        <variable
                name="isConnect"
                type="boolean"/>

        <variable
                name="isDecline"
                type="boolean"/>

    </data>

    <android.support.v7.widget.CardView
            android:id="@+id/cVItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:background="@drawable/rounded_rectangle"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="vertical">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="20dp">

                <com.example.demoshaadi.custom_views.CircleImageView
                        android:id="@+id/profile_img"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle_gray"
                        android:layout_marginTop="@dimen/margin_10"
                        app:imageUrl="@{result.picture.large}"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="3dp"
                        android:text="@string/few_hours_ago"
                        android:textSize="13sp" tools:ignore="RelativeOverlap"/>

                <TextView
                        android:id="@+id/name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_img"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_5"
                        android:padding="@dimen/padding_7"
                        android:text="@{result.name.title.concat(@string/space)+result.name.first.concat(@string/space)+result.name.last}"
                        android:textColor="@android:color/holo_blue_bright"
                        android:textSize="18sp"/>

                <TextView
                        android:id="@+id/description_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name_txt"
                        android:layout_centerHorizontal="true"
                        android:padding="3dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:text="@{description}"
                />
            </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginEnd="33dp"
                    android:layout_marginStart="30dp"
                    android:baselineAligned="false">


                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/margin_10"
                        android:orientation="vertical"
                        android:gravity="center">
                    <FrameLayout android:layout_width="60dp"
                                 android:layout_height="60dp">
                        <com.example.demoshaadi.custom_views.CircleImageView
                                android:id="@+id/decline_img_bck"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@{isDecline? @drawable/circle_red_filled:@drawable/circle_gray}"
                                tools:ignore="ContentDescription"/>
                        <com.example.demoshaadi.custom_views.CircleImageView
                                android:id="@+id/decline_img"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:background="@android:color/transparent"
                                android:src="@{isDecline? @drawable/ic_close_white_24dp:@drawable/ic_close_gray_24dp}"/>
                    </FrameLayout>
                    <TextView
                            android:id="@+id/decline_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:padding="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_6"
                            android:text="@string/decline"
                            android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/margin_10"
                        android:gravity="center">
                    <FrameLayout android:layout_width="60dp" android:layout_height="60dp">
                        <com.example.demoshaadi.custom_views.CircleImageView
                                android:id="@+id/accept_img_bck"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@{isConnect? @drawable/circle_green_filled:@drawable/circle_gray}"
                                tools:ignore="ContentDescription"/>
                        <com.example.demoshaadi.custom_views.CircleImageView
                                android:id="@+id/accept_img"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:src="@{isConnect? @drawable/ic_done_white_24dp:@drawable/ic_done_gray_24dp}"
                                tools:ignore="ContentDescription"/>
                    </FrameLayout>
                    <TextView
                            android:id="@+id/accept_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:padding="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_6"
                            android:text="@string/connect"
                            android:textSize="13sp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>